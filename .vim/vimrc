" do not use vi keybindings
set nocompatible 
" but also dont wait for me to press an arrow key
set ttimeoutlen=50

" save the viminfo file in a more hidden place
" viminfo is in the .gitignore file so all should be well
set viminfo+=n~/.vim/viminfo

" set color and appearance settings
colors desert
hi StatusLine     term=reverse cterm=reverse ctermbg=Black ctermfg=White
hi StatusModified ctermfg=White ctermbg=125 cterm=bold,reverse
hi StatusType     ctermfg=White  ctermbg=21 cterm=reverse
"   this relates to the bar at the bottom
set laststatus=2
set statusline=
set statusline+=\ %f\ %#StatusModified#%m%0*
" switching to right side
set statusline+=%=
set statusline+=%#StatusType#\ %-12y%0*\ 
set statusline+=L\:%4l\/%-5L\ \ C%-3c\ %-10P

" set highlighting for searching
set hlsearch
set incsearch

" set tab properties
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab   " spaces are better than tabs
set autoindent

" some tab properties are file depdent
au FileType python   setlocal shiftwidth=4 tabstop=4
au FileType matlab   setlocal shiftwidth=4 tabstop=4
au FileType make     setlocal noexpandtab shiftwidth=4 tabstop=4

" for fortran, use modern (non-character-length-based) highlighting
let fortran_free_source=1

" 80 character line length and text wrapping
set textwidth=80
set colorcolumn=+1 

" set hybrid line numbering
set number
set relativenumber

" map key for spell cheking
map <F7> :set spell spelllang=en_us<CR>

